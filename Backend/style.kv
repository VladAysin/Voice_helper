

<Screen>:
    orientation: 'vertical'
    size_hint: (1,1)
    
            

    ScrollView:
        id:scrollView
        do_scroll_x:False
        do_scroll_y:True
        size_hint_y: .8

        BoxLayout:
            orientation: 'vertical'
            pos_hint: {"x":1,"y":1 }
            canvas:
                Color: 
                    rgba: 1,0,1,0

                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [25, 0, 0, 0]

            MDList:
                id: chat
    BoxLayout:
        orientation:"horizontal"
        size_hint_y: .1
        
        
        canvas:
            Color: 
                rgba: 1,0,1,1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [25, 0, 0, 0]
        MDFloatingActionButton:
            pos_x: 50
            icon: "android"
            elevation_normal: 12
            on_press: root.say_hello()
            source: "../images/icon.png"
            

        MDFloatingActionButton:
            md_bg_color: "blue"
            icon: "keyboard"
            on_press: root.textInput()
    
                

    

            
